#include <bits/stdc++.h>
using namespace std;
int main() {
    int n;
    cin>>n;
    vector<long long>arr(n,0);
    long long ans=0;
    for(int i=0;i<n;i+=1){
        cin >> arr[i];
        if(i!=0 && arr[i]<arr[i-1]) {
            ans+= arr[i-1]-arr[i];
            arr[i]=arr[i-1];
        }
    }
    cout<<ans<<"\n";
    return 0;
}
