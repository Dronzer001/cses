#include <bits/stdc++.h>
using namespace std;
int main() {
    string str;
    cin>>str;
    int n=str.length();
    int ans=1;
    int curr=1;
    for(int i=1;i<n;i+=1){
        if(str[i]==str[i-1]) curr+=1;
        else{
            ans=max(ans,curr);
            curr=1;
        }
    }
    ans=max(ans,curr);
    cout<<ans<<"\n";
    return 0;
}
